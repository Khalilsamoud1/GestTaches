@model Gestion_de_Taches.Models.TACHE

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Suppression de Tache</h2>

<h3>Supprimer Cette Tache ?</h3>
<div>
    <h4>TACHE</h4>
    <hr />

    <table>
        <tr><td>Date de Début :</td><td>@Html.DisplayFor(model => model.DATE_DEBUT)</td></tr>
        <tr><td>Date de Fin :</td><td>@Html.DisplayFor(model => model.DATE_FIN)</td></tr>
        <tr><td>Description :</td><td>@Html.DisplayFor(model => model.DESCIPTION)</td></tr>
        <tr><td>Nom :</td><td>@Html.DisplayFor(model => model.PERSONNE.NOM)</td></tr>
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-primary btn-lg" /> |
            @Html.ActionLink("Retour à la Liste de Taches", "Index")
        </div>
    }
</div>
