        @Html.HiddenFor(model => model.ID_DEPARTEMENT)

<table><tr><td>Nom de Département :</td><td>@Html.EditorFor(model => model.NOM_DEPARTEMENT, new { htmlAttributes = new { @class = "form-control" } })
